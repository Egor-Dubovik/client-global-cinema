{
	"trailingComma": "es5",
	"tabWidth": 2,
	"semi": true,
	"endOfLine": "auto",
	"printWidth": 100,
	"singleQuote": true,
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@/app/(.*)$",
		"^@/components/(.*)$",
		"^@/screens/(.*)$",
		"^@/ui/(.*)$",
		"^@/hooks/(.*)$",
		"^@/config/(.*)$",
		"^@/services/(.*)$",
		"^@/utils/(.*)$",
		"^@/shared/(.*)$",
		"^@/store/(.*)$",
		"^@/assets/(.*)$",
		"^../(.*)",
		"^./(.*)",
		"(.scss)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
