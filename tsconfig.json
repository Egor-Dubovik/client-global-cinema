{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src/",
    "paths": {
      "@/app/*": [
        "app/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/screens/*": [
        "components/screens/*"
      ],
      "@/ui/*": [
        "components/UI/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/config/*": [
        "config/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/shared/*": [
        "shared/*"
      ],
      "@/store/*": [
        "store/*"
      ],
      "@/assets/*": [
        "assets/*"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.setup.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
