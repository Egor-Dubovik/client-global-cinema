{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "esnext", "dom.iterable"],
		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "src/",
		"paths": {
			"@/app/*": ["app/*"],
			"@/widgets/*": ["widgets/*"],
			"@/features/*": ["features/*"],
			"@/entities/*": ["entities/*"],
			"@/shared/*": ["shared/*"],
			"@/components/*": ["components/*"],
			"@/UI/*": ["shared/UI/*"],
			"@/hooks/*": ["shared/hooks/*"],
			"@/utils/*": ["shared/utils/*"],
			"@/config/*": ["config/*"],
			"@/api/*": ["api/*"],
			"@/helpers/*": ["helpers/*"],
			"@/store/*": ["store/*"],
			"@/assets/*": ["assets/*"]
		},
		"allowJs": true,
		"noEmit": true,
		"incremental": true,
		"isolatedModules": true
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"jest.setup.js",
		"src/shared/config/seo/meta.configts"
	],
	"exclude": ["node_modules"]
}
